<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff8c00"
                android:endColor="#FFFFFF"
                android:angle="270" />
            <stroke
                android:width="0px"
                android:color="#00000000" />
            <corners
                android:radius="15px" />
            <padding
                android:left="10px"
                android:top="10px"
                android:right="10px"
                android:bottom="10px" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#ffc2b7"
                android:endColor="#ffc2b7"
                android:angle="270" />
            <stroke
                android:width="0px"
                android:color="#00000000" />
            <corners
                android:radius="15px" />
            <padding
                android:left="10px"
                android:top="10px"
                android:right="10px"
                android:bottom="10px" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#00000000"
                android:endColor="#00000000"
                android:angle="270" />
            <stroke
                android:width="0px"
                android:color="#00000000" />
            <corners
                android:radius="15px" />
            <padding
                android:left="10px"
                android:top="10px"
                android:right="10px"
                android:bottom="10px" />
        </shape>
    </item>
</selector>
